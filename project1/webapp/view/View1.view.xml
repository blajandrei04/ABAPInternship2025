<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox width="100%" height="80vh" justifyContent="Center" alignItems="Center" id="vbox2" >
                <Panel id="panel1"
                    class="sapUiResponsiveMargin"
                    width="700px"
                    height="520px"
                    
                >
                    <HBox id="asdadadada" justifyContent="Center" class="sapUiSmallMarginBottom">
                        <Image src="/img/mhp_logo.png" width="230px" height="180px" id="logoImage" class="sapUiSmallMarginBottom"/>
                    </HBox>
                    <HBox id="adsaasdasdas" justifyContent="Center">
                        <ObjectStatus id="asasasa" text="{i18n>fillInCredentials}"  state="Information" />
                    </HBox>
                    <VBox class="sapUiSmallMargin" 
                        id="vbox1"
                        width="90%" 
                        justifyContent="Center" 
                        alignItems="Stretch">
                        <VBox width="110%" id="vbox5" class="sapUiSmallMarginBottom">
                            <Label text="{i18n>usernameLabel}" 
                                labelFor="usernameInput" id="label1" 
                                textAlign="Begin"/>
                            <Input id="usernameInput"
                                placeholder="{i18n>usernamePlaceholder}"
                                width="90%"
                                valueLiveUpdate="false"
                            />
                        </VBox>
                        <VBox width="110%" class="sapUiSmallMarginBottom" id="vbox3">
                            <Label text="{i18n>passwordLabel}" 
                                labelFor="passwordInput" id="label2" 
                                textAlign="Begin"/>
                            <Input id="passwordInput" type="Password"
                                width="90%"
                                valueLiveUpdate="false"
                                placeholder="{i18n>passwordPlaceholder}" />
                        </VBox>
                        <HBox id="hbox1" justifyContent="Center">
                            <Button text="Login" 
                                press="onLoginPress" 
                                id="loginButton" />
                            <Button text="Register" press="onRegisterPress" id="registerButton" class="sapUiSmallMarginBegin" />
                        </HBox>
                        <HBox justifyContent="Center" id="hbox2">
                            <Button text="Forgot Password" press="onForgotPasswordPress" id="forgotPasswordButton" class="sapUiSmallMarginTop" />
                        </HBox>
                    </VBox>
                </Panel>
            </VBox>
        </content>
    </Page>
</mvc:View>