<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
         id="forgotPasswordDialog"
         title="{i18n>forgotPasswordTitle}"
         class="sapUiResponsiveContentPadding"
         >
      <VBox id="vboxForgotPassword" class="sapUiSmallMargin">
         <Text text="{i18n>forgotPasswordDescription}" id="forgotPasswordText" />
         <Input id="forgotEmailInput" placeholder="Enter your work email" type="Email" width="90%"/>
      </VBox>
      <VBox id="vboxForgotPassword1" class="sapUiSmallMargin">
         <Text text="{i18n>forgotPasswordDescription1}" id="forgotPasswordText1" />
         <Input id="forgotEmailInput1" placeholder="New Password" type="Password" width="90%"/>
      </VBox>
      <VBox id="vboxForgotPassword12" class="sapUiSmallMargin">
         <Text text="{i18n>forgotPasswordDescription2}" id="forgotPasswordText12" />
         <Input id="forgotEmailInput12" placeholder="Retype New Password" type="Password" width="90%"/>
      </VBox>
      <beginButton>
         <Button text="{i18n>Confirm}" press="onConfirmForgotPassword" id="confirmForgotPasswordButton"/>
      </beginButton>
      <endButton>
        <Button
            id="cancelForgotPasswordButton"
            text="{i18n>dialogCancelButtonText}"
            press="onClosePassDialog"
            class="sapUiSmallMarginEnd"
            type="Reject"
            />
      </endButton>
   </Dialog>
</core:FragmentDefinition>