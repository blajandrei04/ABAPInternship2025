<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="PegDialog"
        title="{i18n>pegDialogTitle}"
        class="sapUiResponsiveContentPadding"
    >
        <VBox>
            <ComboBox
                id="projectComboBox"
                placeholder="{i18n>SearchProject}"
                width="220px"
                items="{projects>/Projects}"
            >
                <core:Item
                    key="{projects>PROJECT_ID}"
                    text="{projects>PROJECT_ID}"
                />
            </ComboBox>
            <ComboBox
                id="managerComboBox"
                placeholder="{i18n>SelectManager}"
                width="220px"
                items="{managers>/Managers}"
            >
                <core:Item
                    key="{managers>EMAIL}"
                    text="{managers>FULL_NAME}"
                />
            </ComboBox>
            <HBox>
                <Button
                    icon="sap-icon://request"
                    text="Request PEG"
                    press="onSendPegRequest"
                    type="Transparent"
                />
                <Button
                    icon="sap-icon://decline"
                    text="Close"
                    press="onClosePegDialog"
                    type="Transparent"
                />
            </HBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>