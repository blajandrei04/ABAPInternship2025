<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="PegDialog"
        title="{i18n>forgotPasswordTitle}"
        class="sapUiResponsiveContentPadding"
    >
        <VBox>
            <ComboBox
                placeholder="{i18n>SearchProject}"
                width="220px"
                items="{/Users}"
            >
                <core:Item
                    key="{ID}"
                    text="{Name}"
                />
            </ComboBox>
            <Label text="Project Manager: " />
            <ComboBox
                placeholder="{i18n>SelectTeammate}"
                width="220px"
                items="{/Users}"
            >
                <core:Item
                    key="{ID}"
                    text="{Name}"
                />
            </ComboBox>
            <ComboBox
                placeholder="{i18n>SelectNumberOfDays}"
                width="220px"
                items="{/Users}"
            >
                <core:Item
                    key="{ID}"
                    text="{Name}"
                />
            </ComboBox>
            <HBox>
                <Button
                    icon="sap-icon://request"
                    text="Reguest PEG"
                    type="Transparent"
                />
                <Button
                    icon="sap-icon://decline"
                    text="Close"
                    press="onClosePegDialog"
                    type="Transparent"
                />
            </HBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
