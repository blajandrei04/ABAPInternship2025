<mvc:View
    controllerName="project1.controller.360Fb"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
   
    <Page id="360FbPage" title="{i18n>360FbTitle}" showNavButton="true" navButtonPress="onNavBack">
       
        <content>
            <VBox class="sapUiSmallMargin">
                <HBox justifyContent="SpaceBetween" alignItems="Center">
                    <Label text="{i18n>fillOutFeedback360}" design="Bold"/>
                    <HBox>
                        <ComboBox placeholder="{i18n>searchUser}" width="200px" items="{/Users}">
                            <core:Item key="{ID}" text="{Name}" />
                        </ComboBox>
                        
                        <CheckBox text="{i18n>anonymous}" selected="{/anonymous}" class="sapUiSmallMarginBegin" />
                    </HBox>
                </HBox>
                <Toolbar design="Transparent"/>
 
                <HBox justifyContent="SpaceAround" class="sapUiSmallMarginTop">
                    <VBox>
                        <CheckBox text="{i18n>technicalSkills}" />
                        <Button icon="sap-icon://navigation-right-arrow" type="Transparent" />
                    </VBox>
                    <VBox>
                        <CheckBox text="{i18n>softSkills}" />
                        <Button icon="sap-icon://navigation-right-arrow" type="Transparent" />
                    </VBox>
                    <VBox>
                        <CheckBox text="{i18n>otherSkills}" />
                        <Button icon="sap-icon://navigation-right-arrow" type="Transparent" />
                    </VBox>
                </HBox>
 
            </VBox>
        </content>
    </Page>
</mvc:View>