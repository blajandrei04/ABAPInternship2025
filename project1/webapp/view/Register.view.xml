<mvc:View controllerName="project1.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="registerPage"
        title="{i18n>registerTitle}"
        showNavButton="true"
        navButtonPress="onNavBack">

        <content>

            <VBox justifyContent="Center" alignItems="Center" class="sapUiResponsiveMargin" height="90%">

                <Panel width="400px" class="sapUiResponsiveMargin sapUiContentPadding" backgroundDesign="Translucent">
                    <VBox alignItems="Stretch" class="sapUiSmallMargin">

                        <Label text="First Name:" labelFor="FirstNameId"/>
                        <Input
                            placeholder="First Name"
                            id="FirstNameId"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>

                        <Label text="Last Name:" labelFor="LastNameId"/>
                        <Input
                            placeholder="Last Name"
                            id="LastNameId"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>

                        <Label text="Email:" labelFor="EmailId"/>
                        <Input
                            placeholder="Email"
                            id="EmailId"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>

                        <Label text="Password:" labelFor="PasswordId"/>
                        <Input
                            placeholder="Password"
                            id="PasswordId"
                            type="Password"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>

                        <Label text="Confirm Password:" labelFor="ConfirmationPasswordId"/>
                        <Input
                            placeholder="Confirm Password"
                            id="ConfirmationPasswordId"
                            type="Password"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>

                        <HBox justifyContent="Center">
                            <Button text="{i18n>registerButton}" press="onSubmit"/>
                        </HBox>

                    </VBox>
                </Panel>

            </VBox>

        </content>
    </Page>
</mvc:View>
