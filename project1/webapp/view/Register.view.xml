<mvc:View controllerName="project1.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="registerPage" title="{i18n>registerTitle}" 
        showNavButton="true"
        navButtonPress="onNavBack">
        <content>
            <Panel>
                <VBox>
                    <HBox>
                        <Text text="FirstName: "></Text>
                        <Input
                            placeholder="FirstName"
                            id="FirstNameId"
                            width="60%"/>
                    </HBox>
                    <HBox>
                        <Text text="LastName: "></Text>
                        <Input
                            placeholder="LastName"
                            id="LastNameId"
                            width="60%"/>
                    </HBox>
                    <HBox>
                        <Text text="Email: "></Text>
                        <Input
                            placeholder="Email"
                            id="EmailId"
                            width="80%"/>
                    </HBox>
                    <HBox>
                        <Text text="Password: "></Text>
                        <Input
                            placeholder="Password"
                            id="PasswordId"
                            width="80%"/>
                    </HBox>
                    <HBox>
                        <Text text="Confirmation Password: "></Text>
                        <Input
                            placeholder="Password"
                            id="ConfirmationPasswordId"
                            width="60%"/>
                    </HBox>
                    <Button text="{i18n>registerButton}" press="onSubmit"/>
                </VBox>
            </Panel>
        </content>
    </Page>
</mvc:View>