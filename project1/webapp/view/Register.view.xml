<mvc:View controllerName="project1.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="registerPage"
        title="{i18n>registerTitle}"
        showNavButton="true"
        navButtonPress="onNavBack">

        <content>

            <VBox justifyContent="Center" alignItems="Center" class="sapUiResponsiveMargin" height="90%">

                <Panel width="400px" class="sapUiResponsiveMargin sapUiContentPadding" backgroundDesign="Translucent">
                    <VBox alignItems="Stretch" class="sapUiSmallMargin">

                        <Label text="{i18n>firstName}" labelFor="FirstNameId"/>
                        <Input
                            placeholder="{i18n>firstName}"
                            id="FirstNameId"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>

                        <Label text="{i18n>lastName}" labelFor="LastNameId"/>
                        <Input
                            placeholder="{i18n>lastName}"
                            id="LastNameId"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>

                        <Label text="Email:" labelFor="EmailId"/>
                        <Input
                            placeholder="{i18n>email}"
                            id="EmailId"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>

                        <Label text="{i18n>password}" labelFor="PasswordId"/>
                        <Input
                            placeholder="{i18n>password}"
                            id="PasswordId"
                            type="Password"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>

                        <Label text="{i18n>confirmPassword}" labelFor="ConfirmationPasswordId"/>
                        <Input
                            placeholder="{i18n>confirmPassword}"
                            id="ConfirmationPasswordId"
                            type="Password"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>

                        <HBox justifyContent="Center">
                            <Button text="{i18n>registerButton}" press="onSubmit"/>
                        </HBox>

                    </VBox>
                </Panel>

            </VBox>

        </content>
    </Page>
</mvc:View>
