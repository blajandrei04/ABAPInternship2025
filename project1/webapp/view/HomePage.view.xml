<mvc:View
	controllerName="project1.controller.HomePage"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="{i18n>Title} {FirstName} {LastName}"
		id="employeeResumePage"
		showNavButton="true"
		navButtonPress=".onNavBack">
		<content>
			<HBox justifyContent="End" alignItems="Center" renderType="Bare">
					<Button text="{i18n>changePasswordButton}"
							press="onChangePasswordPress"
							id="changePasswordButton"
							icon="sap-icon://BusinessSuiteInAppSymbols/icon-cell-lock"
							class="sapUiTinyMarginEnd" />
					<Button text="{i18n>logoutButton}"
							press=".onLogoutPress"
							icon ="sap-icon://undo"
							id="logoutButton" />
				</HBox>
			<IconTabBar
				id="iconTabBar"
				headerBackgroundDesign="Transparent"
				class="sapUiResponsiveContentPadding"
				binding="{Resume}"
                select=".onTabSelect"
				selectedKey="{view>/selectedTabKey}">
				<items>
					<IconTabFilter id="MyTeamTab" text="{i18n>MyTeamTab}" key="Info" icon="sap-icon://hint" iconColor="Neutral">
						<Table id="myTeamTable" items="{/Resume}">
							<columns>
								<Column>
								<Text text="Name"/>
								</Column>
								<Column>
								<Text text="Surname"/>
								</Column>
								<Column>
								<Text text="Career level"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
								<cells>
									<Text text="{Name}"/>
									<Text text="{Surname}"/>
									<Text text="{CareerLevel}"/>
								</cells>
								</ColumnListItem>
							</items>
							</Table>
					</IconTabFilter>
					<IconTabFilter id="360tab" text="{i18n>360tab}" key="Projects" icon="sap-icon://form" iconColor="Critical" >
						<Button text="{i18n>360FbView}" press="onGiveFeedback"/>
					</IconTabFilter>
					<IconTabFilter id="pegTab" text="{i18n>pegTab}" key="Hobbies" icon="sap-icon://form" iconColor="Positive">
						<!-- <Text text="{Hobbies}"/> -->
                        <!-- place content via lazy loading -->
						<Button text="{i18n>PegButton}" press="onRequestPeg"/>
					</IconTabFilter>
					<IconTabFilter id="MyProfileTab" text="{i18n>MyProfileTab}" key="MyProfile" icon="sap-icon://person-placeholder" iconColor="Good">
						<VBox>
							<HBox>
								<Text text="{i18n>FirstName}:"/>
							</HBox>
							<HBox>
								<Text text="{i18n>LastName}:"/>
							</HBox>
							<HBox>
								<Text text="{i18n>Email}:"/>
							</HBox>
							<HBox>
								<Text text="{i18n>careerLevel}:"/>	
							</HBox>
							<HBox>
								<Text text="{i18n>Department}:"/>
							</HBox>
						</VBox>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>
