<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="project1.controller.Feedback"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Page
        title="{i18n>FeedbackTitle}"
        id="FeedbackPage"
        showNavButton="true"
        navButtonPress=".onNavBack">
        <headerContent>
            <Button
                id="sendFeedbackButton"
                text="{i18n>send}"
                type="Emphasized"
                press=".onSendFeedback"/>
        </headerContent>
        <content>
            <VBox class="sapUiMediumMargin">
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="{i18n>sendFeedback}"
                    class="sapUiMediumMarginBottom">
                    <form:content>
                        <Label text="{i18n>selectUser}"/>
                        <ComboBox
                            placeholder="{i18n>searchUser}"
                            width="50%"
                            items="{/Users}"
                            selectedKey="{/ReceiverID}">
                            <core:Item key="{ID}" text="{Name}"/>
                        </ComboBox>
                        <Label text="{i18n>selectProject}"/>
                        <ComboBox
                            placeholder="{i18n>selectProject}"
                            width="50%"
                            items="{/Projects}"
                            selectedKey="{/ProjectID}">
                            <core:Item key="{ProjectID}" text="{ProjectName}"/>
                        </ComboBox>
                        <Label text="{i18n>anonymousFeedback}"/>
                        <CheckBox selected="{/anonymous}"/>
                    </form:content>
                </form:SimpleForm>

                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="{i18n>feedbackDetails}"
                    class="sapUiMediumMarginBottom">
                    <form:content>
                        <Label text="Category"/>
                        <ComboBox
                            id="categoryComboBox"
                            placeholder="Select Category"
                            width="50%"
                            selectedKey="{/selectedCategory}">
                            <core:Item key="Technical" text="{i18n>technicalSkills}"/>
                            <core:Item key="Soft" text="{i18n>softSkills}"/>
                            <core:Item key="Other" text="{i18n>otherSkills}"/>
                            <core:Item key="Overall" text="{i18n>expertiseandworkingresults}"/>
                            <core:Item key="Communication" text="{i18n>networkingSkills}"/>

                        </ComboBox>
                        <Label text="{i18n>rating}"/>
                        <ComboBox
                            id="categoryRating"
                            placeholder="{i18n>rateThis}"
                            selectedKey="{/categoryRating}"
                            width="70%"
                            class="sapUiTinyMarginEnd">
                            <core:Item key="5" text="{i18n>excellent}" />
                            <core:Item key="4" text="{i18n>good}" />
                            <core:Item key="3" text="{i18n>average}" />
                            <core:Item key="2" text="{i18n>fair}" />
                            <core:Item key="1" text="{i18n>poor}" />
                        </ComboBox>
                        <Label text="{i18n>comment}"/>
                        <TextArea
                            id="categoryComment"
                            placeholder="{i18n>expertiseComment}"
                            rows="3"
                            value="{/categoryComment}"
                            width="100%"/>
                    </form:content>
                </form:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:View>