<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="project1.controller.Feedback"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        title="{i18n>FeedbackTitle}"
        id="FeedbackPage"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <headerContent>
            <Button
                id="sendFeedbackButton"
                text="{i18n>send}"
                type="Emphasized"
                press=".onSendFeedback"
            />
        </headerContent>

        <content>
            <VBox class="sapUiSmallMargin">
                <HBox
                    justifyContent="SpaceBetween"
                    alignItems="Center"
                >
                    <VBox width="50%">
                        <Label
                            text="{i18n>sendFeedback}"
                            class="sapUiSmallMarginBottom"
                            design="Bold"
                        />
                        <TextArea
                            id="expertiseComment2"
                            placeholder="{i18n>expertiseFeedback}"
                            rows="4"
                            cols="50"
                            value="{/ExpertiseComment}"
                        />
                    </VBox>

                    <HBox>
                        <ComboBox
                            placeholder="{i18n>searchUser}"
                            width="250px"
                            items="{/Users}"
                            selectedKey="{/ReceiverID}"
                        >
                            <core:Item
                                key="{ID}"
                                text="{Name}"
                            />
                        </ComboBox>
                        <ComboBox
                            placeholder="{i18n>selectProject}"
                            width="250px"
                            items="{/Projects}"
                            selectedKey="{/ProjectID}"
                            class="sapUiSmallMarginBegin"
                        >
                            <core:Item
                                key="{ProjectID}"
                                text="{ProjectName}"
                            />
                        </ComboBox>
                        <CheckBox
                            text="{i18n>anonymous}"
                            selected="{/anonymous}"
                            class="sapUiSmallMarginBegin"
                        />
                    </HBox>
                </HBox>
                <Toolbar design="Transparent" />

                <HBox class="sapUiSmallMarginTop" alignItems="Center">
                    <Label
                        text="{i18n>ratingLabel}"
                        design="Bold"
                        class="sapUiSmallMarginEnd"
                    />
                    <ComboBox
                        id="overallRating"
                        placeholder="{i18n>rateThis}"
                        width="200px"
                        selectedKey="{/OverallRating}"
                    >
                        <core:Item key="5" text="{i18n>excellent}" />
                        <core:Item key="4" text="{i18n>good}" />
                        <core:Item key="3" text="{i18n>average}" />
                        <core:Item key="2" text="{i18n>fair}" />
                        <core:Item key="1" text="{i18n>poor}" />
                    </ComboBox>
                </HBox>

                <Toolbar design="Transparent" />

                <HBox
                    justifyContent="SpaceAround"
                    class="sapUiSmallMarginTop"
                >
                    <VBox>
                        <CheckBox text="{i18n>technicalSkills}" selected="{/technicalSkills}"/>
                        <Button
                            icon="sap-icon://navigation-right-arrow"
                            type="Transparent"
                        />
                    </VBox>
                    <VBox>
                        <CheckBox text="{i18n>softSkills}" selected="{/softSkills}"/>
                        <Button
                            icon="sap-icon://navigation-right-arrow"
                            type="Transparent"
                        />
                    </VBox>
                    <VBox>
                        <CheckBox text="{i18n>otherSkills}" selected="{/otherSkills}"/>
                        <Button
                            icon="sap-icon://navigation-right-arrow"
                            type="Transparent"
                        />
                    </VBox>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>