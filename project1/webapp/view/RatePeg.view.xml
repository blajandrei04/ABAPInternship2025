<mvc:View
    xmlns:commons="sap.suite.ui.commons"
    controllerName="project1.controller.RatePeg"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="PegPage2"
        title="{i18n>PegTitle}"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <Toolbar>
            <ToolbarSpacer />
            <Button
                text="{i18n>saveChanges}"
                type="Emphasized"
                icon="sap-icon://save"
                press=".onSaveChanges"
                id="saveChangesButton"
            />
            <Button
                text="{i18n>sendPEG}"
                type="Default"
                icon="sap-icon://rating-indicator"
                press=".onRatePEG"
                id="ratePegButton1"
                class="sapUiTinyMarginBegin"
            />
        </Toolbar>
        <content>
            <VBox class="sapUiMediumMargin">
                <Panel
                    id="expertisePanel"
                    headerText="{i18n>expertiseTitle}"
                    expandable="true"
                    expanded="true"
                    class="sapUiMediumMarginBottom"
                >
                    <content>
                        <VBox>
                            <VBox>
                                <Label
                                    text="{i18n>description}"
                                    design="Bold"
                                />
                                <Text
                                    text="{i18n>descriptionText}"
                                    class="sapUiMediumMarginBottom"
                                />
                            </VBox>
                            <HBox
                                justifyContent="Start"
                                class="sapUiMediumMarginBottom"
                            >
                                <!-- Field 1 -->
                                <VBox class="sapUiMediumMarginEnd">
                                    <Label
                                        text="{i18n>technicalSkills}"
                                        design="Bold"
                                    />
                                    <ComboBox
                                        id="technicalSkillsRating"
                                        placeholder="Rate this field"
                                        width="150px"
                                    >
                                        <core:Item
                                            key="5"
                                            text="{i18n>excellent}"
                                        />
                                        <core:Item
                                            key="4"
                                            text="{i18n>good}"
                                        />
                                        <core:Item
                                            key="3"
                                            text="{i18n>average}"
                                        />
                                        <core:Item
                                            key="2"
                                            text="{i18n>fair}"
                                        />
                                        <core:Item
                                            key="1"
                                            text="{i18n>poor}"
                                        />
                                    </ComboBox>
                                </VBox>

                                <!-- Field 2 -->
                                <VBox class="sapUiMediumMarginEnd">
                                    <Label
                                        text="{i18n>softSkills}"
                                        design="Bold"
                                    />
                                    <ComboBox
                                        id="softSkillsRating"
                                        placeholder="Rate this field"
                                        width="150px"
                                    >
                                        <core:Item
                                            key="5"
                                            text="{i18n>excellent}"
                                        />
                                        <core:Item
                                            key="4"
                                            text="{i18n>good}"
                                        />
                                        <core:Item
                                            key="3"
                                            text="{i18n>average}"
                                        />
                                        <core:Item
                                            key="2"
                                            text="{i18n>fair}"
                                        />
                                        <core:Item
                                            key="1"
                                            text="{i18n>poor}"
                                        />
                                    </ComboBox>
                                </VBox>

                                <!-- Field 3 -->
                                <VBox class="sapUiMediumMarginEnd">
                                    <Label
                                        text="{i18n>otherSkills}"
                                        design="Bold"
                                    />
                                    <ComboBox
                                        id="otherSkillsRating"
                                        placeholder="Rate this field"
                                        width="150px"
                                    >
                                        <core:Item
                                            key="5"
                                            text="{i18n>excellent}"
                                        />
                                        <core:Item
                                            key="4"
                                            text="{i18n>good}"
                                        />
                                        <core:Item
                                            key="3"
                                            text="{i18n>average}"
                                        />
                                        <core:Item
                                            key="2"
                                            text="{i18n>fair}"
                                        />
                                        <core:Item
                                            key="1"
                                            text="{i18n>poor}"
                                        />
                                    </ComboBox>
                                </VBox>

                                <!-- Field 4 -->
                                <VBox class="sapUiMediumMarginEnd">
                                    <Label
                                        text="{i18n>expertise}"
                                        design="Bold"
                                    />
                                    <ComboBox
                                        id="expertiseRating"
                                        placeholder="Rate this field"
                                        width="150px"
                                    >
                                        <core:Item
                                            key="5"
                                            text="{i18n>excellent}"
                                        />
                                        <core:Item
                                            key="4"
                                            text="{i18n>good}"
                                        />
                                        <core:Item
                                            key="3"
                                            text="{i18n>average}"
                                        />
                                        <core:Item
                                            key="2"
                                            text="{i18n>fair}"
                                        />
                                        <core:Item
                                            key="1"
                                            text="{i18n>poor}"
                                        />
                                    </ComboBox>
                                </VBox>

                                <!-- Field 5 -->
                                <VBox  class="sapUiMediumMarginEnd">
                                    <Label
                                        text="{i18n>networkingSkills}"
                                        design="Bold"
                                    />
                                    <ComboBox
                                        id="networkingSkillsRating"
                                        placeholder="Rate this field"
                                        width="150px"
                                    >
                                        <core:Item
                                            key="5"
                                            text="{i18n>excellent}"
                                        />
                                        <core:Item
                                            key="4"
                                            text="{i18n>good}"
                                        />
                                        <core:Item
                                            key="3"
                                            text="{i18n>average}"
                                        />
                                        <core:Item
                                            key="2"
                                            text="{i18n>fair}"
                                        />
                                        <core:Item
                                            key="1"
                                            text="{i18n>poor}"
                                        />
                                    </ComboBox>
                                </VBox>
                            </HBox>

                            <VBox width="50%">
                                <Label
                                    text="{i18n>comment}"
                                    design="Bold"
                                />
                                <TextArea
                                    id="expertiseComment"
                                    placeholder="{i18n>expertiseComment}"
                                    rows="4"
                                    cols="50"
                                />
                            </VBox>
                        </VBox>
                    </content>
                </Panel>
            </VBox>
        </content>
    </Page>
</mvc:View>
